<?xml version="1.0" encoding="utf-8"?><androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D1F"
    tools:context=".HomeActivity">

    <!-- 1. Main Scrolling Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="60dp"> <!-- Padding prevents content from hiding behind bottom nav -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- TOP SECTION: SLIDESHOW -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#1A1A2E">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- ViewPager2 for the slideshow -->
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/slideshowViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Slideshow Overlay Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TRENDING NOW"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#00E5FF"
                        android:shadowColor="#D500F9"
                        android:shadowRadius="10"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="16dp"/>

                    <!-- Indicator Dots (Visual) -->
                    <!-- MERGED: Added ID here for Kotlin to find the dots -->
                    <LinearLayout
                        android:id="@+id/indicatorLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/ic_launcher_background"
                            android:backgroundTint="#00E5FF"
                            android:layout_marginEnd="4dp"/>
                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/ic_launcher_background"
                            android:backgroundTint="#80FFFFFF"
                            android:layout_marginEnd="4dp"/>
                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/ic_launcher_background"
                            android:backgroundTint="#80FFFFFF"/>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- GRID SECTION FOR FEATURES -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="16dp"
                android:alignmentMode="alignMargins">

                <!-- Box 1: My Wardrobe -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/wardrobeCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeColor="#6200EA"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="#151528">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_launcher_foreground"
                            app:tint="#6200EA"
                            android:layout_marginBottom="12dp"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MY WARDROBE"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Box 2: Outfit Generator -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/generatorCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeColor="#D500F9"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="#151528">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_launcher_foreground"
                            app:tint="#D500F9"
                            android:layout_marginBottom="12dp"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GENERATOR"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Box 3: Mix & Match -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mixMatchCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeColor="#00E5FF"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="#151528">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_launcher_foreground"
                            app:tint="#00E5FF"
                            android:layout_marginBottom="12dp"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MIX &amp; MATCH"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Box 4: Planner -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/plannerCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:strokeColor="#00B8D4"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="#151528">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_launcher_foreground"
                            app:tint="#00B8D4"
                            android:layout_marginBottom="12dp"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PLANNER"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- SEASONAL PICKS BANNER -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="#D500F9"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#1A1A2E">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background"
                        app:tint="#33000000"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WINTER COLLECTION"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 2. Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#151528"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:menu="@menu/bottom_app_bar_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
